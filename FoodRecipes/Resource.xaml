<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:FoodRecipes">
<!--Bộ chuyển đổi-->
    <local:RelativeToAbsolutePathConverter x:Key="relativeToAbsolutePathConverter"/>
    <local:BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter"/>
<!--Splash Screen-->
    <!--Hiệu ứng đổ bóng đen-->
    <DropShadowEffect x:Key="splashScreenBlackShadowEffect"
                      BlurRadius="40"
                      ShadowDepth="30"
                      Direction="0"
                      Color="#000000"/>
    <!--Hiệu ứng đổ bóng trắng-->
    <DropShadowEffect x:Key="splashScreenWhiteShadowEffect"
                      BlurRadius="10"
                      ShadowDepth="2"
                      Direction="90"
                      Color="#FFFFFF"/>
    <!--Kiểu chữ-->
    <Style x:Key="splashScreenTextStyle"
           TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground"
                Value="#FFFFFF"/>
        <Setter Property="FontFamily"
                Value="/FoodRecipes;component/Fonts/#Tahoma"/>
        <Setter Property="TextAlignment"
                Value="Justify"/>
        <Setter Property="TextWrapping"
                Value="WrapWithOverflow"/>
        <Setter Property="FontWeight"
                Value="Medium"/>
        <Setter Property="FontSize"
                Value="15"/>
        <Setter Property="VerticalAlignment"
                Value="Center"/>
    </Style>
    <!--Kiểu tick checkbox -->
    <Style x:Key="tickCheckboxStyle"
           TargetType="{x:Type CheckBox}">
        <Setter Property="Focusable"
                Value="False"/>
        <Setter Property="Margin"
                Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">
                    <Image x:Name="tickCheckBoxIcon"
                           Source="Assets/Icons/UncheckedTickCheckboxIcon.png"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           Stretch="Fill"
                           Width="28"
                           Height="28"/>
                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver"
                                           Value="True"/>
                                <Condition Property="IsChecked"
                                           Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="tickCheckBoxIcon"
                                    Property="Source"
                                    Value="Assets/Icons/HoverTickCheckboxIcon.png"/>
                            <Setter Property="Effect"
                                    Value="{StaticResource splashScreenWhiteShadowEffect}"/>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver"
                                           Value="True"/>
                                <Condition Property="IsChecked"
                                           Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="tickCheckBoxIcon"
                                    Property="Source"
                                    Value="Assets/Icons/HoverTickCheckboxIcon.png"/>
                            <Setter Property="Effect"
                                    Value="{StaticResource splashScreenWhiteShadowEffect}"/>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver"
                                           Value="False"/>
                                <Condition Property="IsChecked"
                                           Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="tickCheckBoxIcon"
                                    Property="Source"
                                    Value="Assets/Icons/CheckedTickCheckboxIcon.png"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--Kiểu nút bỏ qua-->
    <Style x:Key="skipButtonStyle"
           TargetType="{x:Type Button}">
