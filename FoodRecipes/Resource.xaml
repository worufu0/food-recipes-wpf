    <!--Kiểu nút chi tiết-->
    <Style x:Key="detailButtonStyle"
           TargetType="{x:Type Button}">
        <Setter Property="Grid.Row"
                Value="1"/>
        <Setter Property="HorizontalAlignment"
                Value="Right"/>
        <Setter Property="VerticalAlignment"
                Value="Bottom"/>
        <Setter Property="Focusable"
                Value="False"/>
        <Setter Property="Margin"
                Value="3 5 3 5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="detailButtonBorder" 
                            Width="90"
                            Height="20"
                            CornerRadius="5">
                        <TextBlock Text="Xem chi tiết"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   FontWeight="Medium"
                                   FontSize="13"
                                   Foreground="White"
                                   FontFamily="/FoodRecipes;component/Fonts/#Tahoma"/>
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0"
                                                 EndPoint="1,1">
                                <GradientStop Color="#FFA500"
                                              Offset="0"/>
                                <GradientStop Color="#FF4500"
                                              Offset="0.5"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="detailButtonBorder"
                                    Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="10"
                                                      ShadowDepth="0"
                                                      Direction="180"
                                                      Color="#FFFFFF"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <EventTrigger RoutedEvent="Button.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="detailButtonBorder"
                                                     Storyboard.TargetProperty="(Background).(LinearGradientBrush.GradientStops)[0].(GradientStop.Offset)"
                                                     AutoReverse="True"
                                                     RepeatBehavior="Forever"
                                                     BeginTime="0:0:0"
                                                     Duration="0:0:0.25"
                                                     To="0.5">
                                    </DoubleAnimation>
                                    <DoubleAnimation Storyboard.TargetName="detailButtonBorder"
                                                     Storyboard.TargetProperty="(Background).(LinearGradientBrush.GradientStops)[1].(GradientStop.Offset)"
                                                     AutoReverse="True"
                                                     RepeatBehavior="Forever"
                                                     BeginTime="0:0:0"
                                                     Duration="0:0:0.25"
                                                     To="1">
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Button.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="detailButtonBorder"
                                                         Storyboard.TargetProperty="(Background).(LinearGradientBrush.GradientStops)[0].(GradientStop.Offset)"
                                                         FillBehavior="HoldEnd"
                                                         BeginTime="0:0:0"
                                                         Duration="0:0:0"
                                                         To="0">
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="detailButtonBorder"
                                                         Storyboard.TargetProperty="(Background).(LinearGradientBrush.GradientStops)[1].(GradientStop.Offset)"
                                                         FillBehavior="HoldEnd"
                                                         BeginTime="0:0:0"
                                                         Duration="0:0:0"
                                                         To="0.5">
                                        </DoubleAnimation>
                                    </Storyboard>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
