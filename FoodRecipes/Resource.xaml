                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver"
                                           Value="True"/>
                                <Condition Property="IsChecked"
                                           Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="showFavoriteCheckBoxIcon"
                                    Property="Source"
                                    Value="Assets/Icons/HoverShowFavoriteCheckBoxIcon.png"/>
                            <Setter Property="Effect"
                                    Value="{StaticResource homeScreenOrangeShadowEffect}"/>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver"
                                           Value="False"/>
                                <Condition Property="IsChecked"
                                           Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="showFavoriteCheckBoxIcon"
                                    Property="Source"
                                    Value="Assets/Icons/OnShowFavoriteCheckBoxIcon.png"/>
                        </MultiTrigger>
